<?xml version="1.0" encoding="utf-8"?>
<!-- Mapa GeoNews - Diseño moderno con búsqueda y filtros flotantes -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Maps -->
    <fragment
        android:id="@+id/map_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!-- Chips de filtros horizontales -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">


    </HorizontalScrollView>

    <!-- Botón de ubicación actual (flotante derecha) -->

    <!-- Lista horizontal de noticias en la parte inferior -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mi_ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Mi ubicación"
        app:backgroundTint="@color/primary"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_location"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/layout_noticias_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Botón cerrar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_cerrar_carousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#FFFFFF"
            app:backgroundTint="#1a2530"
            app:fabSize="mini"
            android:contentDescription="Cerrar lista"/>

        <!-- RecyclerView horizontal de noticias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_noticias_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"/>

    </LinearLayout>

    <!-- Lista de noticias visibles (flotante en la parte superior) - Compatibilidad -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_lista_noticias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        android:maxHeight="300dp"
        app:cardBackgroundColor="#1a2530"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Cabecera de la lista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_titulo_lista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Noticias cercanas"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_contador_noticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@color/primary"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>

                <ImageButton
                    android:id="@+id/btn_cerrar_lista"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#FFFFFF"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cerrar lista"/>

            </LinearLayout>

            <!-- RecyclerView para la lista de noticias -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_noticias_visibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Navegación inferior -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <include layout="@layout/bottom_navigation"/>
    </FrameLayout>

</FrameLayout>
