<?xml version="1.0" encoding="utf-8"?>
<!-- Ajustes estilo GeoNews - Modo claro/oscuro -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- AppBar con título y botón Done -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_primary"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_primary">

            <!-- Spacer izquierdo -->
            <View
                android:layout_width="48dp"
                android:layout_height="match_parent"/>

            <!-- Título centrado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"/>

            <!-- Botón Done a la derecha -->
            <TextView
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_done"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </androidx.appcompat.widget.Toolbar>

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:alpha="0.5"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido con Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="80dp">

            <!-- Sección de Perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <!-- Avatar con botón de editar -->
                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="12dp">

                    <!-- Imagen de perfil circular -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="48dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/divider"
                        app:strokeWidth="2dp"
                        app:cardBackgroundColor="@color/bg_secondary">

                        <ImageView
                            android:id="@+id/iv_avatar_settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Foto de perfil"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón de editar pequeño -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_edit_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        app:fabSize="mini"
                        app:fabCustomSize="32dp"
                        app:backgroundTint="@color/primary"
                        app:tint="@color/text_on_primary"
                        app:maxImageSize="16dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:contentDescription="Editar foto"/>

                </FrameLayout>

                <!-- Nombre -->
                <TextView
                    android:id="@+id/tv_nombre_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_default_user"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <!-- Ubicación -->
                <TextView
                    android:id="@+id/tv_ubicacion_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_default_location"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- SECCIÓN: ACCOUNT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_account"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Edit Profile -->
                    <LinearLayout
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#200d7ff2">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_person"
                                app:tint="@color/primary"
                                android:contentDescription="Icono de perfil"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_edit_profile"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            app:tint="@color/icon_secondary"
                            android:contentDescription="Ir"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- My Locations -->
                    <LinearLayout
                        android:id="@+id/btn_my_locations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#200d7ff2">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/primary"
                                android:contentDescription="Icono de ubicación"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_my_locations"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- Security & Privacy -->
                    <LinearLayout
                        android:id="@+id/btn_security_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#200d7ff2">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_secure"
                                app:tint="@color/primary"
                                android:contentDescription="Icono de seguridad"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_security"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: CONTENT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- News Categories -->
                    <LinearLayout
                        android:id="@+id/btn_news_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#20ff9800">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_list"
                                app:tint="#ff9800"
                                android:contentDescription="Icono de categorías"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_categories"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:id="@+id/tv_categories_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_all"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- Language -->
                    <LinearLayout
                        android:id="@+id/btn_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#204caf50">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_sort_alphabetically"
                                app:tint="#4caf50"
                                android:contentDescription="Icono de idioma"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_language"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:id="@+id/tv_language_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/language_spanish"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- Theme / Tema -->
                    <LinearLayout
                        android:id="@+id/btn_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#209c27b0">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#9c27b0"
                                android:contentDescription="Icono de tema"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_theme"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:id="@+id/tv_theme_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme_auto"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: NOTIFICATIONS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_notifications"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Push Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#20ab47bc">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_popup_reminder"
                                app:tint="#ab47bc"
                                android:contentDescription="Icono de notificaciones"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_push_notifications"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_push_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/primary"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- Email Digest -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#2026a69a">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_dialog_email"
                                app:tint="#26a69a"
                                android:contentDescription="Icono de email"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_email_digest"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_email_digest_desc"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_email_digest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/primary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: SUPPORT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_support"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Help Center -->
                    <LinearLayout
                        android:id="@+id/btn_help_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#2064748b">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_help"
                                app:tint="@color/icon_secondary"
                                android:contentDescription="Icono de ayuda"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_help_center"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:alpha="0.3"
                        android:layout_marginStart="60dp"/>

                    <!-- About GeoNews -->
                    <LinearLayout
                        android:id="@+id/btn_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#2064748b">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_info_details"
                                app:tint="@color/icon_secondary"
                                android:contentDescription="Icono de información"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_about"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:rotation="270"
                            android:contentDescription="Ir"
                            app:tint="@color/icon_secondary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Log Out -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/settings_logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#f44336"
                android:textAllCaps="false"
                app:backgroundTint="@color/bg_card"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Versión -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_version"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
