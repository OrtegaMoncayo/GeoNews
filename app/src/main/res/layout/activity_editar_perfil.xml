<?xml version="1.0" encoding="utf-8"?>
<!-- Editar Perfil - GeoNews Responsive Design -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- Header con AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_primary"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- Botón Cancelar -->
                <TextView
                    android:id="@+id/btn_cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_cancel"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Título centrado -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/edit_profile_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"/>

                <!-- Espaciador para balancear -->
                <View
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:alpha="0.3"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido con Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Avatar Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <!-- Avatar con botón de cámara -->
                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="12dp">

                        <!-- Imagen de perfil circular -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/cat_politica"
                            app:strokeWidth="3dp"
                            app:cardBackgroundColor="@color/background_light">

                            <ImageView
                                android:id="@+id/iv_avatar_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_person"
                                android:contentDescription="@string/cd_profile_photo"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Botón de cámara flotante -->
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_cambiar_foto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            app:fabSize="mini"
                            app:backgroundTint="@color/primary"
                            app:tint="@color/background_dark"
                            app:elevation="4dp"
                            app:maxImageSize="20dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:contentDescription="@string/cd_change_photo"/>

                    </FrameLayout>

                    <!-- Botón "Cambiar Foto" -->
                    <TextView
                        android:id="@+id/btn_change_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_change_photo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre Completo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_full_name"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_input"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nombre_completo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:hint="@string/edit_profile_full_name_hint"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="15sp"
                        android:inputType="textPersonName"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre de Usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_username"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_input"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false"
                    app:prefixText="\@"
                    app:prefixTextColor="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:hint="@string/edit_profile_username_hint"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Biografía -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/edit_profile_bio"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp"/>

                    <TextView
                        android:id="@+id/tv_bio_contador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/150"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="4dp"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_input"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false"
                    app:counterEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="90dp"
                        android:hint="@string/edit_profile_bio_hint"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="15sp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLength="150"
                        android:gravity="top|start"
                        android:paddingTop="12dp"
                        android:lines="3"
                        android:scrollbars="vertical"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ubicación -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_location"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_input"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/icon_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:hint="@string/edit_profile_location_hint"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email (Solo Lectura) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_email"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/bg_input"
                        app:boxStrokeWidth="0dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintEnabled="false"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/icon_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="52dp"
                            android:hint="@string/edit_profile_email_hint"
                            android:textColor="@color/text_hint"
                            android:textColorHint="@color/text_hint"
                            android:textSize="15sp"
                            android:inputType="textEmailAddress"
                            android:enabled="false"
                            android:focusable="false"
                            android:maxLines="1"
                            android:paddingEnd="100dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Badge VERIFIED -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="#200d7ff2"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_profile_verified"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

                <!-- Botón Guardar Cambios -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guardar_cambios"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/edit_profile_save"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:elevation="4dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
