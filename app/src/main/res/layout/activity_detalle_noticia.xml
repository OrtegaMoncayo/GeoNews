<?xml version="1.0" encoding="utf-8"?>
<!-- Detalle de noticia GeoNews - Modo oscuro con imagen hero grande -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#1a2632">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen hero GRANDE -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <ImageView
                    android:id="@+id/iv_portada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#283039"
                    android:contentDescription="Imagen de portada"/>

                <!-- Gradient overlay oscuro -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_primary"/>

                <!-- Botones flotantes arriba -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_revert"
                        android:tint="#FFFFFF"
                        android:background="@drawable/bg_circle"
                        android:contentDescription="Volver"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/btn_bookmark"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@android:drawable/star_big_off"
                        android:tint="#FFFFFF"
                        android:background="@drawable/bg_circle"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Guardar"/>

                    <ImageView
                        android:id="@+id/btn_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:tint="#FFFFFF"
                        android:background="@drawable/bg_circle"
                        android:contentDescription="Compartir"/>

                </LinearLayout>

            </FrameLayout>

            <!-- Contenido principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingTop="16dp">

                <!-- Badge de categoría -->
                <TextView
                    android:id="@+id/tv_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POLÍTICA"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:background="@color/primary"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Título grande -->
                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Concejo Municipal Aprueba Nuevo Proyecto de Parque en el Centro"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Metadata: Ubicación + Fecha + Tiempo de lectura -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="#9cabba"
                        android:contentDescription="Ubicación"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tv_ubicacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Distrito Centro"
                        android:textSize="13sp"
                        android:textColor="#9cabba"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="8dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="#9cabba"
                        android:alpha="0.5"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 Oct, 2023"
                        android:textSize="13sp"
                        android:textColor="#9cabba"
                        android:maxLines="1"
                        android:layout_marginEnd="8dp"/>

                    <View
                        android:id="@+id/view_separator_lectura"
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="#9cabba"
                        android:alpha="0.5"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_tiempo_lectura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 min"
                        android:textSize="13sp"
                        android:textColor="#9cabba"
                        android:maxLines="1"/>

                </LinearLayout>

                <!-- Autor (con avatar circular pequeño) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:background="#495057"
                            android:contentDescription="Autor"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="María González"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Descripción/Lead -->
                <TextView
                    android:id="@+id/tv_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Después de meses de intenso debate y reuniones comunitarias, el Concejo Municipal ha votado unánimemente para avanzar con la ambiciosa iniciativa 'Corazón Verde'."
                    android:textSize="17sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#9cabba"
                    android:layout_marginBottom="24dp"/>

                <!-- Contenido completo -->
                <TextView
                    android:id="@+id/tv_contenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Esta decisión histórica marca un punto de inflexión para el desarrollo del centro de la ciudad. El proyecto, que ha estado en etapas de planificación durante más de tres años, tiene como objetivo transformar el lote vacío de 15 acres en la esquina de la Cuarta y Main en un parque público de última generación.\n\nLa iniciativa abarca senderos para caminar, un anfiteatro y un sistema de agua sostenible que se espera cree un legado para las generaciones futuras."
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"
                    android:layout_marginBottom="28dp"/>

                <!-- Cita destacada (estilo quote) -->
                <LinearLayout
                    android:id="@+id/layout_cita_destacada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="28dp"
                    android:padding="20dp"
                    android:background="#283039"
                    android:visibility="gone">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tv_cita_destacada"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        android:alpha="0.95"/>

                </LinearLayout>

                <!-- Sección Impacto Comunitario -->
                <LinearLayout
                    android:id="@+id/layout_impacto_comunitario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Impacto en la Comunidad"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_impacto_comunitario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="#9cabba"
                        android:layout_marginBottom="24dp"/>

                </LinearLayout>

                <!-- Botón Ver Mapa del Proyecto -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ver_mapa"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="Ver Mapa del Proyecto"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconTint="#FFFFFF"
                    android:layout_marginBottom="32dp"/>

                <!-- Hashtags -->
                <TextView
                    android:id="@+id/tv_hashtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"/>

                <!-- Elementos ocultos para compatibilidad -->
                <TextView android:id="@+id/tv_visualizaciones" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tv_estado" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tv_distancia" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
