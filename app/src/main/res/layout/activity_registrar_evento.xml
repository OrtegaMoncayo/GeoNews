<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Registrar Evento"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <!-- ScrollView para el formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header del formulario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crea un nuevo evento comunitario"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="24dp" />

            <!-- Descripción del evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción del evento"
                app:startIconDrawable="@android:drawable/ic_menu_edit"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="5"
                    android:maxLength="500"
                    android:hint="Ej: Concierto de música andina en el Parque Central" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha del evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha del evento"
                app:startIconDrawable="@android:drawable/ic_menu_today"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:hint="dd/MM/yyyy" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hora del evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora del evento"
                app:startIconDrawable="@android:drawable/ic_menu_recent_history"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:hint="HH:mm" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ubicación -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ubicación"
                app:startIconDrawable="@android:drawable/ic_dialog_map"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapWords"
                    android:hint="Ej: Parque Central de Ibarra" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Categoría del evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Categoría"
                app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

                <Spinner
                    android:id="@+id/sp_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cupo máximo (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cupo máximo (opcional)"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                app:helperText="Dejar vacío para cupos ilimitados"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cupo_maximo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Ej: 50" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Costo (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Costo de entrada (opcional)"
                app:startIconDrawable="@android:drawable/ic_dialog_info"
                app:helperText="Dejar en 0 o vacío para eventos gratuitos"
                app:prefixText="$"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="0.00" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- ProgressBar (oculto por defecto) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Botón Crear Evento -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_crear_evento"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Crear Evento"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textStart"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                android:elevation="4dp" />

            <!-- Nota informativa -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ Al crear el evento, se enviará una notificación automática por email"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
