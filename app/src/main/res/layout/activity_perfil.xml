<?xml version="1.0" encoding="utf-8"?>
<!-- Perfil estilo GeoNews - Modo claro -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:paddingTop="20dp">

                <!-- Botón back -->
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/icon_primary"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Volver"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/btn_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_settings"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"/>

            </LinearLayout>

            <!-- Avatar y nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:paddingTop="16dp">

                <!-- Avatar con botón de cámara -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Foto de perfil"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:background="@color/bg_secondary"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón de cámara -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_camera"
                        app:tint="@color/white"
                        app:backgroundTint="@color/primary"
                        android:contentDescription="Cambiar foto"/>

                </FrameLayout>

                <!-- Nombre -->
                <TextView
                    android:id="@+id/tv_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_default_user"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <!-- Ubicación -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/icon_secondary"
                        android:contentDescription="Ubicación"/>

                    <TextView
                        android:id="@+id/tv_ubicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_default_location"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <!-- Bio -->
                <TextView
                    android:id="@+id/tv_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_bio_default"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>

                <!-- Botón Editar Perfil -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_editar_nombre"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/profile_edit"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textAllCaps="false"
                    app:cornerRadius="28dp"
                    app:strokeColor="@color/divider"
                    app:strokeWidth="1.5dp"/>

            </LinearLayout>

            <!-- Cards de estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <!-- News Read -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_list"
                            app:tint="@color/primary"
                            android:contentDescription="Noticias"/>

                        <TextView
                            android:id="@+id/tv_noticias_leidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="142"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_news_read"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Saved Articles -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/star_big_on"
                            app:tint="#8B5CF6"
                            android:contentDescription="Guardadas"/>

                        <TextView
                            android:id="@+id/tv_noticias_guardadas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_saved"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Streak -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_add"
                            app:tint="#FF8C42"
                            android:contentDescription="Racha"/>

                        <TextView
                            android:id="@+id/tv_dias_activo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="45"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/profile_days_active"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Mis Intereses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_interests"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_intereses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Los chips se agregan dinámicamente desde el código -->
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Botón de Modo Pokémon GO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/btn_ocultar_noticias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="#10b981"
                        android:contentDescription="Modo GO"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_ocultar_noticias_mode"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_ocultar_noticias_desc"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_ocultar_noticias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#10b981"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Menú de opciones -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Saved Articles -->

                    <LinearLayout
                        android:id="@+id/btn_editar_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Guardados"
                            android:src="@android:drawable/star_big_off"
                            app:tint="@color/cat_educacion" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="@string/profile_saved_articles"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="Ir"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/icon_secondary" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="58dp"
                        android:background="@color/divider"
                        android:alpha="0.3"/>

                    <!-- Notifications -->
                    <LinearLayout
                        android:id="@+id/btn_notificaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_popup_reminder"
                            app:tint="@color/cat_educacion"
                            android:contentDescription="Notificaciones"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="@string/settings_push_notifications"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/icon_secondary"
                            android:contentDescription="Ir"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="58dp"
                        android:background="@color/divider"
                        android:alpha="0.3"/>

                    <!-- Privacy & Security -->
                    <LinearLayout
                        android:id="@+id/btn_cambiar_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_lock"
                            app:tint="@color/cat_politica"
                            android:contentDescription="Seguridad"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="@string/profile_privacy"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/icon_secondary"
                            android:contentDescription="Ir"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Cerrar Sesión -->
            <TextView
                android:id="@+id/btn_cerrar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings_logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:padding="16dp"
                android:layout_marginBottom="32dp"
                android:background="?attr/selectableItemBackground"/>

            <!-- Elementos ocultos para compatibilidad -->
            <TextView android:id="@+id/tv_email" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <TextView android:id="@+id/tv_nombre_completo" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <TextView android:id="@+id/tv_telefono" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <ImageButton android:id="@+id/btn_editar_telefono" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <ImageButton android:id="@+id/btn_editar_ubicacion" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/switch_notificaciones" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Navegación inferior -->
    <include layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
