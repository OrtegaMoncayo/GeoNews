<?xml version="1.0" encoding="utf-8"?>
<!-- Item de noticia compacto para carrusel horizontal del mapa -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_noticia"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardBackgroundColor="@color/bg_card_mapa"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <!-- Categoría con badge -->
            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_category"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:background="@drawable/bg_chip"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="4dp"/>

            <!-- Título -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_card_mapa"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="4dp"/>

            <!-- Metadata compacta -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_metadata_mapa"
                    android:contentDescription="Ubicación"/>

                <TextView
                    android:id="@+id/tv_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibarra"
                    android:textSize="9sp"
                    android:textColor="@color/text_metadata_mapa"
                    android:layout_marginStart="3dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_metadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_time"
                    android:textSize="9sp"
                    android:textColor="@color/text_metadata_mapa"
                    android:layout_marginStart="6dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Imagen miniatura -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/iv_imagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/bg_secondary"
                android:contentDescription="Imagen noticia"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
