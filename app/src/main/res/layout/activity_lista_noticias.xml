<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noticias Locales"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Panel de Filtros (GeolocalizaciÃ³n + Parroquias) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_filtros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Selector de Radio de bÃºsqueda -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Buscar noticias cercanas"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_todas"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_2km"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 km"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_5km"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 km"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_10km"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 km"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_20km"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 km"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#E0E0E0"/>

            <!-- Selector de Parroquia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜ï¸ Filtrar por parroquia"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <Spinner
                android:id="@+id/spinner_parroquias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Indicador de ubicaciÃ³n actual -->
    <TextView
        android:id="@+id/tv_ubicacion_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="ðŸ“ Obteniendo tu ubicaciÃ³n..."
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone"/>

    <!-- Contenido principal: RecyclerView de noticias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_noticias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- NavegaciÃ³n inferior (incluida desde bottom_navigation.xml) -->
    <include layout="@layout/bottom_navigation"/>

</LinearLayout>
