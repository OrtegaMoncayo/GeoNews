<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: CategorÃ­a y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- CategorÃ­a -->
            <TextView
                android:id="@+id/tv_categoria_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cultural"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:textAllCaps="true"/>

            <!-- Estado -->
            <TextView
                android:id="@+id/tv_estado_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… PrÃ³ximamente"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="visible"/>

        </LinearLayout>

        <!-- DescripciÃ³n del evento -->
        <TextView
            android:id="@+id/tv_descripcion_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Festival de MÃºsica Andina en el Parque Central"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"/>

        <!-- Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tv_fecha_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Nov 2025 18:00"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"/>

        </LinearLayout>

        <!-- UbicaciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tv_ubicacion_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parque Central de Ibarra"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Distancia (se muestra solo si estÃ¡ disponible) -->
            <TextView
                android:id="@+id/tv_distancia_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Footer: Cupos y Costo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Cupos -->
            <TextView
                android:id="@+id/tv_cupos_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50 cupos disponibles"
                android:textSize="12sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:drawableTint="?android:attr/textColorSecondary"
                android:gravity="center_vertical"/>

            <!-- Costo -->
            <TextView
                android:id="@+id/tv_costo_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gratis"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#E8F5E9"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
