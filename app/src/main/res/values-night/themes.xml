<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ==================== TEMA BASE - MODO OSCURO ==================== -->
    <!-- Este tema se aplica automáticamente cuando el sistema está en modo oscuro -->
    <style name="Base.Theme.NoticiasIbarra" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/bg_secondary</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/cat_salud</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="colorSecondaryContainer">@color/bg_secondary</item>
        <item name="colorOnSecondaryContainer">@color/cat_salud</item>

        <!-- Colores terciarios -->
        <item name="colorTertiary">@color/text_secondary</item>
        <item name="colorOnTertiary">@color/text_on_primary</item>
        <item name="colorTertiaryContainer">@color/bg_secondary</item>
        <item name="colorOnTertiaryContainer">@color/text_secondary</item>

        <!-- Colores de error -->
        <item name="colorError">@color/cat_salud</item>
        <item name="colorOnError">@color/text_on_primary</item>
        <item name="colorErrorContainer">@color/bg_secondary</item>
        <item name="colorOnErrorContainer">@color/cat_salud</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:colorBackground">@color/bg_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/bg_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/bg_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Colores de outline -->
        <item name="colorOutline">@color/divider</item>
        <item name="colorOutlineVariant">@color/stroke</item>

        <!-- Control colors -->
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlNormal">@color/icon_secondary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar - Modo oscuro -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/nav_background</item>
        <item name="android:windowBackground">@color/bg_primary</item>

        <!-- Formas redondeadas -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NoticiasIbarra.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NoticiasIbarra.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NoticiasIbarra.LargeComponent</item>

        <!-- Widgets -->
        <item name="materialButtonStyle">@style/Widget.NoticiasIbarra.Button</item>
        <item name="materialCardViewStyle">@style/Widget.NoticiasIbarra.CardView</item>
        <item name="textInputStyle">@style/Widget.NoticiasIbarra.TextInputLayout</item>
    </style>
</resources>
