<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de la aplicaciÃ³n -->
    <style name="Theme.NoticiasIbarra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema sin ActionBar (para Login, Splash, etc.) -->
    <style name="Theme.NoticiasIbarra.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema para pantallas con Toolbar personalizado -->
    <style name="Theme.NoticiasIbarra.Toolbar" parent="Theme.NoticiasIbarra">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
