<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Características opcionales -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- OpenGL ES 2.0 requerido para Google Maps -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Para Google Maps -->
    <queries>
        <package android:name="com.google.android.apps.maps" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoticiasIbarra"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="TU_API_KEY_AQUI" />

        <!-- Splash Screen (Activity de inicio) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NoticiasIbarra.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra.NoActionBar" />

        <!-- Registro -->
        <activity
            android:name=".activities.RegistroActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra.NoActionBar" />

        <!-- MainActivity (pantalla principal antigua) -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- NAVEGACIÓN PRINCIPAL (4 secciones) -->

        <!-- Lista de Noticias -->
        <activity
            android:name=".activities.ListaNoticiasActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- Lista de Eventos -->
        <activity
            android:name=".activities.ListaEventosActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- Mapa de Noticias (con restricción a Ibarra) -->
        <activity
            android:name=".activities.MapaActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- Perfil de Usuario -->
        <activity
            android:name=".activities.PerfilActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- SECUNDARIAS -->

        <!-- Detalle de Noticia -->
        <activity
            android:name=".activities.DetalleNoticiaActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra.NoActionBar" />

        <!-- Publicar Noticia -->
        <activity
            android:name=".activities.PublicarNoticiaActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- Detalle de Evento -->
        <activity
            android:name=".activities.DetalleEventoActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra.NoActionBar" />

        <!-- Registrar Evento -->
        <activity
            android:name=".activities.RegistrarEventoActivity"
            android:exported="false"
            android:theme="@style/Theme.NoticiasIbarra" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
